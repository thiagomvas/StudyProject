<div class="chip" style="color: @TextColor; border: 2px solid @Color;">
    <div class="icon" style="background-color: @Color;"></div>
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Color { get; set; } = Theme.Default.ForegroundColor;
    [Parameter] public string TextColor { get; set; } = Theme.Default.TextColor;
}
