@inherits ComponentBase

<button class="action-button">
	@ChildContent
</button>

@code {
	[Parameter] public RenderFragment ChildContent { get; set; }
	[Parameter] public EventCallback OnClick { get; set; }

	[Parameter] public string DefaultColor { get; set; } = Theme.Default.ForegroundColor;
	[Parameter] public string HoverColor { get; set; } = Theme.Default.PrimaryColor;
	[Parameter] public string TextColor { get; set; } = Theme.Default.TextColor;
}

<style>
	.action-button {
		background-color: @DefaultColor;
		color: @TextColor;
	}

		.action-button:hover {
			background-color: @HoverColor;
		}
</style>